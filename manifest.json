{
  "name": "encar-filter",
  "description": "encar filter",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "128": "icon96.png"
  },
  "permissions": [
    "activeTab",
    "debugger",
    "webNavigation",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": ["https://*.encar.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.encar.com/*"],
      "js": ["content-script.js"]
    }
  ]
}